<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Dynamic Tutorial</title>
  </head>
  <body>
    {{>navbar data=details}}
    <section id="services_section" class="py-5">
      <div class="container">
        <h1 class="text-center text-secondary">Tutorials</h1>
        <div class="input-group">
            <div class="form-outline">
              <input type="search" id="form1" class="form-control image"/>
              <label class="form-label" for="form1">Search</label>
            </div>
            <button type="button" onclick="search()" class="btn btn-primary"><i class="fas fa-search"></i></button>
        </div>
        
        <div class="row mt-5">
          {{#each tutorial}}
          <div class="col-md-3 tutorial" data-search="{{this.title}}">

            <div class="card">

              <div class="card" style="width: 18rem; height: 18rem;">
                <img src="{{this.icon}}" class="card-img-top image1" alt="...">
                <div class="card-body text-center">
                  <h5 class="card-title">{{this.title}}</h5>
                  <a class="btn btn-primary" href="{{this.link1}}" role="button">{{this.linkText1}}</a>
                </div>
              </div>

            </div>
          </div>
          {{/each}}
        </div>
      </div>

        <footer class="footer py-3">
          <div class="container text-center">
            <div class="row">
              <div class="col-md-12">
                @ copyright: <span>learn dev with shagun katariya</span>
              </div>
            </div>
          </div>
        </footer>

    </section>
    <script>
      const searchInput = document.getElementById('form1');

      // Add event listener for keypress
      searchInput.addEventListener('keypress', function(event) {
        if (event.keyCode === 13) {
          search();
        }
      });
      let search = () => {
        let searchInput = document.getElementById("form1")
        let tutorial = document.getElementsByClassName("tutorial")
        for (const c of tutorial) {
          console.log(c.dataset.search, searchInput.value)
          console.log(c.dataset.search.startsWith(searchInput.value))
          if(c.dataset.search.toLowerCase().startsWith(searchInput.value.toLowerCase()))
          {
            c.style.display="block"
          }
          else
          {
            c.style.display="none"
          }
        }
              }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>